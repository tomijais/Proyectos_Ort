<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jais.n_cube.UserInterfaz">

    <Button
        android:id="@+id/IdEncender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IdControl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:text="ENCENDER LED" />

    <TextView
        android:id="@+id/IdControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="CONTROL LED"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/IdApagar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/IdEncender"
        android:layout_below="@+id/IdEncender"
        android:layout_marginTop="62dp"
        android:text="APAGAR LED" />

    <TextView
        android:id="@+id/IdBufferIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/IdControl"
        android:layout_below="@+id/IdApagar"
        android:layout_marginTop="56dp"
        android:text="Dato:"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/IdDesconectar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/IdApagar"
        android:text="DESCONECTAR"
        android:textAlignment="center"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnColor"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_above="@+id/IdDesconectar"
        android:layout_below="@+id/IdBufferIn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="66dp"
        android:text="Cambiar Color de led"
        android:visibility="visible" />
</RelativeLayout>
